.col-md-10.col-12
  - instrument = ''
  - members.each do |rm|
    - previnstrument = instrument
    - instrument = rm.instrument_for_ensemble(event.ensembles.first)['name']
    - if instrument != previnstrument
      .row.mb-1
        .col-7.font-weight-bold
          = instrument

    .row.mb-1
      .col-5
        = rm.full_name
      .col-7.mb-1
        = link_to 'Aanmelden', rehearsal_registration_update_path(event, { member_id: rm.id, attendance: true }), method: :put, remote: true, class: accept_style(event, rm)
        = link_to 'Afmelden', rehearsal_registration_update_path(event, { member_id: rm.id, attendance: false }), method: :put, remote: true, class: decline_style(event, rm)


- @rehearsals.each do |rehearsal|
  .row.mb-1.align-items-center
    .col-4
      = rehearsal.date_time.strftime('%d-%m-%Y')
      = rehearsal.date_time.strftime('%H:%m-%Y')
    .col-4
      = rehearsal.description
    .col-4
      .btn-group.float-right
        = link_to 'Bewerken', edit_admin_rehearsal_path(rehearsal), class: 'btn btn-sm btn-outline-secondary'
        = link_to 'Verwijderen',admin_rehearsal_path(rehearsal),  method: :delete, data: { confirm: 'Weet u het zeker?' }, class: 'btn btn-sm btn-danger'




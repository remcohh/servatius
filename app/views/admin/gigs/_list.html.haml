- @gigs.each do |gig|
  .row.mb-1.align-items-center
    .col-4
      = gig.date_time.strftime('%d-%m-%Y %H:%M')
    .col-4
      = gig.title
    .col-4
      .btn-group.float-right
        = link_to('Bewerken', edit_admin_gig_path(gig), class: 'btn btn-sm btn-outline-secondary')
        = link_to('Verwijderen', admin_gig_path(gig), method: :delete, data: { confirm: 'Weet u het zeker?' }, class: 'btn btn-sm btn-danger')

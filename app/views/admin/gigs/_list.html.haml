- @gigs.each do |gig|
  .row.mb-1.align-items-center.data-row
    .col-12.border-bottom
      .row
        .col-3
          = link_to gig.date_time.strftime('%d-%m'), admin_gig_path(gig)
          .small
            = gig.date_time.strftime('%H:%M')
        .col-9
          .row
            .col-9
              = gig.title
          .row
            .col-7.small
              = gig.ensembles.collect(&:name).join(', ')





.container-fluid
  .row
    .col-1
    .col-10
      .row
        .col-10
          %h3
            = "Uitvoering: #{@gig.date_time.strftime("%d-%m-%Y")}: #{@gig.title}"
      .row
        .col-10.font-weight-bold
          Bezetting
      =render partial: 'layouts/availability', locals: {instruments_availability: @instruments_availability, gig: @gig}
      .row
        .col-10.pt-4
          = link_to('Bewerken', edit_admin_gig_path(@gig), class: 'btn btn-sm btn-outline-secondary')
          = link_to('Verwijderen', admin_gig_path(@gig), method: :delete, data: { confirm: 'Weet u het zeker?' }, class: 'btn btn-sm btn-danger')







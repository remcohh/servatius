.container-fluid
  .row
    .col-1
    .col-10
      = bootstrap_form_for ['admin', @chore] do |f|
        .row
          .col-10
            %h3
              Muziekstuk
        .row
          .col-10
            = f.datetime_field :date_time,  label: 'Wanneer'
            = f.text_field :title, label: 'Titel'
            = f.text_field :description, label: 'Omschrijving'
            = f.collection_select :coordinator_id, Member.all.order('last_name'), 'id', :full_name, {}, { :multiple => false }
            = f.text_field :min_number, label: 'Minimaal aantal deelnemers'
            = f.text_field :max_number, label: 'Maximaal aantal deelnemers'
        .row
          .col-10.mb-5
            = f.submit 'Opslaan', class: 'btn btn-primary'
    .col-1

- @songs.each do |song|
  .row.mb-1.align-items-center
    .col-4
      = song.title
    .col-2
      = song.state
    .col-6
      .btn-group.float-right
        = link_to('Bewerken', edit_admin_song_path(song), class: 'btn btn-sm btn-outline-secondary')
        = link_to('Verwijderen', admin_song_path(song), method: :delete, data: { confirm: 'Weet u het zeker?' }, class: 'btn btn-sm btn-danger')

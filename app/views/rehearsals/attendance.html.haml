.container-fluid
  .row
    .col-md-1
    .col-md-10.col-12
      .row
        .col-10
          %h3
            Presentielijst repetitie
      .row.mt-3
        .col-10
          = "Datum: #{@rehearsal.date_time.strftime('%d-%m-%Y %H:%M')}"

      .row.mt-3
        .col-md-10.col-12
          - @unknown.each do |rm|
            .row
              .col-5
                = rm.full_name
              .col-7
                = link_to 'Afwezig', rehearsal_attendance_update_path(@rehearsal, { attendance: false }), method: :put, class: 'btn btn-danger btn-sm'
                = link_to 'Aanwezig', rehearsal_attendance_update_path(@rehearsal, { attendance: true }), method: :put, class: 'btn btn-success btn-sm'
      .row.mt-3
        .col-10.font-weight-bold
          Afwezig
      .row
        .col-10
          - @absents.each do |rm|
            .row
              .col-5
                = rm.member.full_name
      .row.mt-3
        .col-10.font-weight-bold
          Afgemeld
      .row
        .col-10
          - @declines.each do |rm|
            .row
              .col-5
                = rm.member.full_name
      .row.mt-3
        .col-10
          = link_to 'Terug naar overzicht', rehearsals_path
    .col-md-1